@page
@model FinalProject.Pages.View.ManageProductModel
@{
    ViewData["Title"] = "Manage Products";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary">Manage Products</h2>
    <div>
        <a asp-page="Create" class="btn btn-success me-2">+ Thêm mới sản phẩm</a>
    </div>
</div>

<form method="post" enctype="multipart/form-data" asp-page-handler="UploadExcel" class="mb-4">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <input type="file" name="excelFile" accept=".xlsx,.xls" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-success">⬆ Upload Excel</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Product Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Information</th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Category.CategoryName</td>
                <td>@product.ProductName</td>
                <td> <img class="card-img" src="@product.ImageUrl" alt="" style="width: 100px; height: auto;" /></td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>Added by staff @product.UserId</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@product.ProductId" class="btn btn-primary">Sửa</a>
                    <a asp-page="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>


