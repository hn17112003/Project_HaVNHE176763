@page
@model FinalProject.Pages.View.InventoryTransactionsModel
@{
    ViewData["Title"] = "Inventory Transaction History";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Inventory Transaction History</h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="productFilter" class="form-label">Product</label>
                                <select name="productId" id="productFilter" class="form-select">
                                    <option value="">All Products</option>
                                    @foreach (var product in Model.Products)
                                    {
                                        <option value="@product.ProductId" selected="@(product.ProductId == Model.ProductId)">
                                            @product.ProductName
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="transactionTypeFilter" class="form-label">Transaction Type</label>
                                <select name="transactionType" id="transactionTypeFilter" class="form-select">
                                    <option value="">All Types</option>
                                    <option value="Receipt" selected="@(Model.TransactionType == "Receipt")">Receipt</option>
                                    <option value="Issue" selected="@(Model.TransactionType == "Issue")">Issue</option>
                                    <option value="Adjustment" selected="@(Model.TransactionType == "Adjustment")">Adjustment</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="fromDate" class="form-label">From Date</label>
                                <input type="date" name="fromDate" id="fromDate" class="form-control" value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="col-md-2">
                                <label for="toDate" class="form-label">To Date</label>
                                <input type="date" name="toDate" id="toDate" class="form-control" value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">Filter</button>
                                <a href="/View/InventoryTransactions" class="btn btn-secondary">Clear</a>
                            </div>
                        </div>
                    </form>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Product</th>
                                    <th>Type</th>
                                    <th>Quantity Change</th>
                                    <th>User</th>
                                    <th>Reference</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@transaction.Product.ProductName</td>
                                        <td>
                                            @if (transaction.TransactionType == "Receipt")
                                            {
                                                <span>Receipt</span>
                                            }
                                            else if (transaction.TransactionType == "Issue")
                                            {
                                                <span>Issue</span>
                                            }
                                            else
                                            {
                                                <span>Adjustment</span>
                                            }
                                        </td>
                                        <td>
                                            @if (transaction.QuantityChange < 0)
                                            {
                                                <span class="text-danger">@transaction.QuantityChange</span>
                                            }
                                            else
                                            {
                                                <span class="text-success">+@transaction.QuantityChange</span>
                                            }
                                        </td>
                                        <td>@transaction.User.Username</td>
                                        <td>
                                            @if (transaction.ReferenceId.HasValue)
                                            {
                                                <span>Ref: @transaction.ReferenceId</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>@(transaction.Notes ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Transactions.Any())
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No transactions found matching the selected criteria.</p>
                        </div>
                    }

                    <!-- Summary Section -->
                    @if (Model.Transactions.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title">Summary</h5>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Total Transactions:</strong> @Model.Transactions.Count()
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Receipts:</strong> @Model.Transactions.Where(t => t.TransactionType == "Receipt").Sum(t => t.QuantityChange)
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Issues:</strong> @Model.Transactions.Where(t => t.TransactionType == "Issue").Sum(t => Math.Abs(t.QuantityChange))
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Net Change:</strong> @Model.Transactions.Sum(t => t.QuantityChange)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
