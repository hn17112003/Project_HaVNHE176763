@page
@model ProfileModel

<h2>My Profile</h2>
@if (Model.CurrentUser != null)
{
    <table class="table table-bordered">
        <tr>
            <th>User ID</th>
            <td>@Model.CurrentUser.UserId</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>@Model.CurrentUser.Username</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.CurrentUser.Email</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>@Model.CurrentUser.Password</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.CurrentUser.Address</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.CurrentUser.Phone</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>@Model.CurrentUser.Role</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@Model.CurrentUser.CreatedAt</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>@Model.CurrentUser.UpdatedAt</td>
        </tr>
    </table>
    <div class="mt-3">
        <a asp-page="/View/EditProfile" class="btn btn-primary">Edit Profile</a>
        <a asp-page="/View/ChangePassword" class="btn btn-warning">Change Password</a>
    </div>
}
else
{
    <p>No profile found.</p>
}
