@page
@model FinalProject.Pages.View.EditSupplierModel
@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Edit Supplier: @Model.Supplier.SupplierName</h3>
                    <div>
                        <a href="/View/ViewSupplier?id=@Model.Supplier.SupplierId" class="btn btn-info me-2">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                        <a href="/View/ManageSuppliers" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Suppliers
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Supplier.SupplierId" />
                        
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Basic Information</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Supplier.SupplierName" class="form-label">Supplier Name *</label>
                                    <input asp-for="Supplier.SupplierName" class="form-control" required />
                                    <span asp-validation-for="Supplier.SupplierName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Supplier.ContactPerson" class="form-label">Contact Person</label>
                                    <input asp-for="Supplier.ContactPerson" class="form-control" />
                                    <span asp-validation-for="Supplier.ContactPerson" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Supplier.Email" class="form-label">Email</label>
                                    <input asp-for="Supplier.Email" type="email" class="form-control" />
                                    <span asp-validation-for="Supplier.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Supplier.Phone" class="form-label">Phone</label>
                                    <input asp-for="Supplier.Phone" class="form-control" />
                                    <span asp-validation-for="Supplier.Phone" class="text-danger"></span>
                                </div>

                            </div>

                            <!-- Address Information -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Address Information</h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Supplier.Address" class="form-label">Address</label>
                                    <textarea asp-for="Supplier.Address" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="Supplier.Address" class="text-danger"></span>
                                </div>
                            </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/View/ManageSuppliers" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Update Supplier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
