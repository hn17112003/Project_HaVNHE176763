@page
@model FinalProject.Pages.View.ChangePasswordModel
@{
}
<div class="email-container">
    <div class="email-card">
        <h2 class="email-title">Change Password</h2>
        <form method="post" onsubmit="event.preventDefault(); $('#confirmChangePasswordModal').modal('show');">
            <input type="email" id="email" name="email" placeholder="Enter your email" class="email-input" value="@Model.Email" readonly>
            <input type="password" id="newPassword" name="newPassword" placeholder="Enter your new password" class="email-input" required>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <h6 style="color:red">@Model.Error</h6>
            }
            <button type="submit" class="submit-button">Change Password</button>
        </form>
        <a href="/View/Login" class="back-button">Back</a>
    </div>
</div>

<!-- Confirmation Modal for Changing Password -->
<div class="modal fade" id="confirmChangePasswordModal" tabindex="-1" role="dialog" aria-labelledby="confirmChangePasswordModalLabel" aria-hidden="true" style="z-index: 1050; position: fixed;">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="z-index: 1051;">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmChangePasswordModalLabel">Confirm Password Change</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to change your password?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form method="post">
                    <input type="hidden" id="hiddenEmail" name="email" />
                    <input type="hidden" id="hiddenNewPassword" name="newPassword" />
                    <button type="submit" class="btn btn-danger" onclick="document.getElementById('hiddenEmail').value = document.getElementById('email').value; document.getElementById('hiddenNewPassword').value = document.getElementById('newPassword').value;">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#confirmChangePasswordModal').on('shown.bs.modal', function () {
            $(this).find('[autofocus]').focus();
        });
    });
</script>

<style>
    .email-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .email-card {
        width: 90%;
        max-width: 400px;
        padding: 30px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        border-radius: 8px;
    }

    .email-title {
        color: #333;
        margin-bottom: 15px;
    }

    .email-input {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    .submit-button, .back-button {
        display: inline-block;
        padding: 12px 24px;
        background-color: #4CAF50;
        color: #ffffff;
        text-decoration: none;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        cursor: pointer;
        margin-top: 10px;
    }

        .submit-button:hover {
            background-color: #45a049;
        }

    .back-button {
        background-color: #888;
    }

        .back-button:hover {
            background-color: #666;
        }

    .email-footer {
        font-size: 14px;
        color: #999;
        margin-top: 20px;
    }
</style>
