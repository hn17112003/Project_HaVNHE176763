@page
@model FinalProject.Pages.View.VerifyEmailModel
@{
}
<div class="email-container">
    <div class="email-card">
        <h2 class="email-title">Verify Email</h2>
        <form method="post">
            <input type="email" id="email" name="email" placeholder="Enter your email" class="email-input" required>
            @if (!string.IsNullOrEmpty(Model.error))
            {
                <h6 style="color:red">@Model.error</h6>
            }
            <button type="submit" class="submit-button">Verify</button>
        </form>
        <a style="margin:20px" href="/View/Login">Back</a>
    </div>
</div>

<style>
    .email-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin:100px;
    }

    .email-card {
        width: 90%;
        max-width: 400px;
        padding: 30px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        border-radius: 8px;
    }

    .email-title {
        color: #333;
        margin-bottom: 15px;
    }

    .email-input {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    .submit-button, .back-button {
        display: inline-block;
        padding: 12px 24px;
        background-color: #4CAF50;
        color: #ffffff;
        text-decoration: none;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        cursor: pointer;
        margin-top: 10px;
    }

    .submit-button:hover {
        background-color: #45a049;
    }

    .back-button {
        background-color: #888;
    }

    .back-button:hover {
        background-color: #666;
    }

    .email-footer {
        font-size: 14px;
        color: #999;
        margin-top: 20px;
    }
</style>
