@page
@model FinalProject.Pages.View.ManageSuppliersModel
@{
    ViewData["Title"] = "Manage Suppliers";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Manage Suppliers</h3>
                    <a href="/View/CreateSupplier" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Supplier
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Section -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="searchTerm" class="form-label">Search</label>
                                <input type="text" name="searchTerm" id="searchTerm" class="form-control" 
                                       placeholder="Search by name, contact person, or email..." value="@Model.SearchTerm">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">Search</button>
                                <a href="/View/ManageSuppliers" class="btn btn-secondary">Clear</a>
                            </div>
                        </div>
                    </form>

                    <!-- Results Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Supplier Name</th>
                                    <th>Contact Person</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var supplier in Model.Suppliers)
                                {
                                    <tr>
                                        <td><strong>@supplier.SupplierName</strong></td>
                                        <td>@(supplier.ContactPerson ?? "-")</td>
                                        <td>@(supplier.Email ?? "-")</td>
                                        <td>@(supplier.Phone ?? "-")</td>
                                        <td>@(supplier.Address ?? "-")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/View/ViewSupplier?id=@supplier.SupplierId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                <a href="/View/EditSupplier?id=@supplier.SupplierId" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a href="/View/DeleteSupplier?id=@supplier.SupplierId" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Suppliers.Any())
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No suppliers found matching the selected criteria.</p>
                            <a href="/View/CreateSupplier" class="btn btn-primary">Add Your First Supplier</a>
                        </div>
                    }

                    <!-- Statistics Section -->
                    @if (Model.Suppliers.Any())
                    {
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.TotalSuppliers</h5>
                                        <small>Total Suppliers</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Suppliers.Count()</h5>
                                        <small>Filtered Results</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
