@page
@model FinalProject.Pages.Reports.BestSellingProductsModel
@{
    ViewData["Title"] = "Best-Selling Products";
}

<h2>Top Best-Selling Products</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Total Sold</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.BestSellingProducts)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.TotalSold</td>
            </tr>
        }
    </tbody>
</table>
